<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true" >

        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="@color/border_button_secondary_active"/>
            <solid
                android:color="@color/background_button_secondary_active"/>
            <corners
                android:bottomRightRadius="@dimen/radius_xl"
                android:topLeftRadius="@dimen/radius_xl"
                android:topRightRadius="@dimen/radius_xl"
                android:bottomLeftRadius="@dimen/radius_xl" />
        </shape>

    </item>


    <item android:state_selected="false" >

            <shape android:shape="rectangle">
                <stroke
                    android:width="1dp"
                    android:color="@color/border_button_secondary_normal"/>
                <solid
                    android:color="@color/background_button_secondary_normal"/>
                <corners
                    android:bottomRightRadius="@dimen/radius_xl"
                    android:topLeftRadius="@dimen/radius_xl"
                    android:topRightRadius="@dimen/radius_xl"
                    android:bottomLeftRadius="@dimen/radius_xl" />
            </shape>

    </item>

