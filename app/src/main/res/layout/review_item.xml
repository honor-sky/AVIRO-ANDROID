<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="review"
            type="com.aviro.android.domain.entity.review.Review" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_semibold"
            android:textColor="@color/Gray0"
            android:textSize="16dp"
            android:text="@{review.nickname}" />
        <TextView
            android:id="@+id/updatedDate_textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="7dp"
            android:fontFamily="@font/pretendard_regular"
            android:textColor="@color/Gray2"
            android:textSize="13dp"
            android:text="@{review.updatedTime}" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/review_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:paddingTop="12dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="12dp"
        android:background="@drawable/base_roundsquare_gray6" >
        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_semibold"
            android:textColor="@color/Gray0"
            android:textSize="16dp"
            android:text="@{review.content}" />
        <!-- android:maxLines="4"
        android:ellipsize="end"-->
    </LinearLayout>

        <!-- 좋아요 버튼 / 신고 삭제 버튼 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <LinearLayout
                android:id="@+id/reviewLikeBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_button_secondary_selector"
                android:layout_margin="2dp"
                android:paddingHorizontal="12dp"
                android:paddingVertical="14dp">

                <ImageView
                    android:id="@+id/reviewLikeBtnThumb"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/ic_thumb_up"/>

                <TextView
                    android:id="@+id/reviewLikeCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="6dp"
                    android:textAppearance="@style/Body.Default.Strong" />
                <!-- android:text="@{review.count}"  -->

            </LinearLayout>

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/updateBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_gravity="center_vertical"
                android:background="@drawable/ic_price_dot" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>